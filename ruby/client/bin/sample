#!/usr/bin/env ruby

path =  File.dirname(File.expand_path($PROGRAM_NAME))
$LOAD_PATH << path + "/../lib"
$LOAD_PATH << path  + "/../../commons/lib"

if ARGV.length < 1
  puts "usage:sample address:port"
  exit
end

require 'roma/client'

rc = Roma::Client::RomaClient.new(ARGV)

n = 10

n.times{|i|
  rc["key-#{i}"]="value-#{i}"
}

n.times{|i|
  puts rc["key-#{i}"]
}
